@page
@model PMS.WebUI.Pages.Invoice.IndexModel
@{
    ViewData["Title"] = "Select Customer";
}

<div class="container">
    <h3>Create Invoice</h3>
    <hr />
    <h4>Step 1: Select Customer</h4>
    <div class="container">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="font-weight-bold">Choose a customer</label>
                <select asp-for="IndexVM.CustomerId" asp-items="Model.IndexVM.CustomerList" class="form-control">
                    <option>Choose a customer</option>
                </select>
                <span asp-validation-for="IndexVM.CustomerId" class="text-danger">Please select a customer.</span>
            </div>
            <hr />
            <input type="submit" class="btn btn-primary" value="Proceed"/>
        </form>
    </div>
</div>